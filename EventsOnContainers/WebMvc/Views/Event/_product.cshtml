@model WebMvc.Models.EventItem




<form asp-controller="Cart" asp-action="AddToCart">
    <img class="esh-catalog-thumbnail" src="@Model.PictureUrl" />
    <input class="esh-catalog-button" type="submit" value="[ ADD TO CART ]" />
    <div class="esh-catalog-name">
        <span>@Model.EventName</span>
    </div>
    <div class="esh-catalog-price">
        <span>@Model.Price.ToString("N2")</span>
    </div>
    <input type="hidden" asp-for="@Model.EventItemCatagory" name="category" />
    <input type="hidden" asp-for="@Model.EventCatagoryId" name="categoryId" />
    <input type="hidden" asp-for="@Model.EventItemAddress" name="category" />
    <input type="hidden" asp-for="@Model.EventAddressId" name="categoryId" />
    <input type="hidden" asp-for="@Model.EventItemOraganizer" name="category" />
    <input type="hidden" asp-for="@Model.EventOraganizerId" name="categoryId" />
    <input type="hidden" asp-for="@Model.EventItemType" name="type" />
    <input type="hidden" asp-for="@Model.EventTypeId" name="typeId" />
    <input type="hidden" asp-for="@Model.Description" name="description" />
    <input type="hidden" asp-for="@Model.Id" name="id" />
    <input type="hidden" asp-for="@Model.EventName" name="eventname" />
    <input type="hidden" asp-for="@Model.PictureUrl" name="pictureUrl" />
    <input type="hidden" asp-for="@Model.Price" name="price" />
</form>